{
	"name": "sitecake/sitecake-cms",
    "description": "SiteCake - a simple, drag and drop CMS",
	"version": "2.2.7",
    "type": "project",
    "keywords": [ "cms" ],
    "homepage": "http://sitecake.com",
    "licence": "GPL-3.0+",

    "require": {
        "php": ">=5.4.0"
    },

    "autoload": {
        "psr-4" : {
            "Sitecake\\": "Sitecake"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Sitecake\\": "src/Sitecake"
        }
    },

    "require": {
        "silex/silex": "~1.2",
        "jdesrosiers/silex-cors-provider": "~0.1",
        "symfony/translation": "~2.3",
        "symfony/config": "~2.3",
        "symfony/yaml": "~2.3",        
    	"pclzip/pclzip": "dev-master",
    	"electrolinux/phpquery": "dev-master",
    	"smottt/wideimage": "dev-master",
        "league/flysystem": "1.0.*@dev"
    },

    "require-dev": {
    	"phpunit/phpunit": "4.3.*",
        "mockery/mockery": "0.9.2"
    }  
}